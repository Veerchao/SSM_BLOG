<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="springmvc.mapper.UsersMapper">
	<insert id="add" parameterType="User">
		insert into users(id,username,password,email,create_time,admin) values
		(#{id},#{username},#{password},#{email},#{createtime},#{admin})
	</insert>
	<select id="getByUsername" parameterType="String" resultType="User">
		select * from users where username=#{username}

	</select>
	<delete id="delete" parameterType="String">
		delete from users where username = #{username}
	</delete>
	<update id="update">
		update users set username=#{username} where id=#{id}
	</update>
	<select id="list" resultType="User">

		select * from users
	</select>

</mapper>