<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="springmvc.mapper.UsersMapper">
	<insert id="add" parameterType="User">
		insert into users(id,username,password,email,createtime,admin) values
		(#{id},#{username},#{password},#{email},#{createtime},#{admin})
	</insert>
	<select id="checkUsername" parameterType="String" resultType="User">
	    select * from users where username=#{username}
	</select>
	<select id="checkEmail" parameterType="String" resultType="String">
	    select username from users where email=#{email}
	</select>
	
	<select id="getById" parameterType="int" resultType="User">
		select * from users where id=#{id}

	</select>
	<delete id="delete" parameterType="Integer">
		delete from users where id = #{id}
	</delete>
	<update id="update" >
		update users set username=#{username},password=#{password},
		email=#{email},admin=#{admin} where id=#{id}
	</update>
	<select id="list" resultType="User">

		select * from users
	</select>

</mapper>